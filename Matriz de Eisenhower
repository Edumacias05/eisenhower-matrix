<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Matriz de Eisenhower</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
            text-align: left;
        }
        form {
            margin-top: 20px;
        }
        label {
            display: block;
            margin: 8px 0 4px;
        }
        select, input, textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
        }
        button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
        .filter-buttons button {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <h1>Matriz de Eisenhower</h1>

    <!-- Filter Buttons -->
    <div class="filter-buttons">
        <button onclick="filterTasks('all')">Todos</button>
        <button onclick="filterTasks('I')">Importante y Urgente</button>
        <button onclick="filterTasks('II')">Importante pero No Urgente</button>
        <button onclick="filterTasks('III')">No Importante pero Urgente</button>
        <button onclick="filterTasks('IV')">No Importante y No Urgente</button>
    </div>

    <!-- Task Form -->
    <form id="task-form">
        <label for="task-name">Tarea:</label>
        <input type="text" id="task-name" required>
        
        <label for="importance">Importancia:</label>
        <select id="importance" required>
            <option value="Importante">Importante</option>
            <option value="No importante">No importante</option>
        </select>

        <label for="urgency">Urgencia:</label>
        <select id="urgency" required>
            <option value="Urgente">Urgente</option>
            <option value="No urgente">No urgente</option>
        </select>

        <label for="due-date">Fecha de Vencimiento:</label>
        <input type="date" id="due-date" required>
        
        <label for="notes">Notas:</label>
        <textarea id="notes"></textarea>

        <button type="submit">Añadir Tarea</button>
    </form>

    <table id="eisenhower-matrix">
        <thead>
            <tr>
                <th>Tarea</th>
                <th>Importancia</th>
                <th>Urgencia</th>
                <th>Fecha de Vencimiento</th>
                <th>Notas</th>
            </tr>
        </thead>
        <tbody>
            <!-- Filas generadas dinámicamente por JavaScript -->
        </tbody>
    </table>

    <script>
        let tasks = [
            { task: "Tarea 1", importance: "Importante", urgency: "Urgente", dueDate: "2024-05-21", notes: "Nota 1" },
            { task: "Tarea 2", importance: "Importante", urgency: "No urgente", dueDate: "2024-05-22", notes: "Nota 2" },
            { task: "Tarea 3", importance: "No importante", urgency: "Urgente", dueDate: "2024-05-23", notes: "Nota 3" },
            { task: "Tarea 4", importance: "No importante", urgency: "No urgente", dueDate: "2024-05-24", notes: "Nota 4" }
        ];

        function categorizeTasks(tasks) {
            const quadrants = {
                I: [],
                II: [],
                III: [],
                IV: []
            };

            tasks.forEach(task => {
                if (task.importance === "Importante" && task.urgency === "Urgente") {
                    quadrants.I.push(task);
                } else if (task.importance === "Importante" && task.urgency === "No urgente") {
                    quadrants.II.push(task);
                } else if (task.importance === "No importante" && task.urgency === "Urgente") {
                    quadrants.III.push(task);
                } else if (task.importance === "No importante" && task.urgency === "No urgente") {
                    quadrants.IV.push(task);
                }
            });

            return quadrants;
        }

        function renderTable(tasks) {
            const tableBody = document.querySelector("#eisenhower-matrix tbody");
            tableBody.innerHTML = ""; // Clear existing rows

            tasks.forEach(task => {
                const row = document.createElement("tr");
                row.innerHTML = `
                    <td>${task.task}</td>
                    <td>${task.importance}</td>
                    <td>${task.urgency}</td>
                    <td>${task.dueDate}</td>
                    <td>${task.notes}</td>
                `;
                tableBody.appendChild(row);
            });
        }

        function filterTasks(quadrant) {
            const categorizedTasks = categorizeTasks(tasks);
            let filteredTasks = [];

            switch (quadrant) {
                case 'I':
                    filteredTasks = categorizedTasks.I;
                    break;
                case 'II':
                    filteredTasks = categorizedTasks.II;
                    break;
                case 'III':
                    filteredTasks = categorizedTasks.III;
                    break;
                case 'IV':
                    filteredTasks = categorizedTasks.IV;
                    break;
                default:
                    filteredTasks = [...categorizedTasks.I, ...categorizedTasks.II, ...categorizedTasks.III, ...categorizedTasks.IV];
                    break;
            }

            renderTable(filteredTasks);
        }

        document.getElementById('task-form').addEventListener('submit', function(event) {
            event.preventDefault();

            const taskName = document.getElementById('task-name').value;
            const importance = document.getElementById('importance').value;
            const urgency = document.getElementById('urgency').value;
            const dueDate = document.getElementById('due-date').value;
            const notes = document.getElementById('notes').value;

            tasks.push({ task: taskName, importance, urgency, dueDate, notes });
            filterTasks('all');
        });

        // Inicialización
        filterTasks('all');
    </script>
</body>
</html>
